using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Text.RegularExpressions;
using System.Threading.Tasks;

namespace HackerRank___ServiceLane
{
    class Program
    {
        static void Main(string[] args)
        {
            int n, t;
            String[] width;            
            String[] segment;
            
            String[] iVal = Console.ReadLine().Split(' ');
            n = int.Parse(iVal[0]);
            t = int.Parse(iVal[1]);
           
            width = Console.ReadLine().Split(' ');
            int[] w = new int[width.Length];
            for (int k = 0; k < width.Length; k++)
            {
                w[k] = int.Parse(width[k]);                    
            }

            int[] suitableVehicle = new int[t];

            for (int j = 0; j < t; j++)
            {               
                int s1, s2;
                segment = Console.ReadLine().Split(' ');
                s1 = int.Parse(segment[0]);
                s2 = int.Parse(segment[1]);
                suitableVehicle[j] = serviceLane(w, s1, s2);                
            }

            for (int sV = 0; sV < t; sV++)
            {
                Console.WriteLine(suitableVehicle[sV]);
            }

            Console.ReadLine();

        }

        public static int serviceLane(int[] width, int start, int end)
        {
            int min =3;
            for (int i = start; i <= end; i++)
            {
                if (width[i] < min)
                {
                    min = width[i];
                }
            }
            return min;
        }

        
    }
}

