import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int T = sc.nextInt();
        
        for  (int i = 0; i < T; i++) {
            //money
            int N = sc.nextInt();
            
            //price of chocolate
            int C = sc.nextInt();
            
            // wrappers needed for a free chocolate
            int M = sc.nextInt();
            
            int chocolates = N / C;
            
            int wrappers = chocolates;
            
            
            // why does this work??
            while (wrappers >= M) {
                int newChocolate = wrappers/M;
                chocolates += newChocolate;
                wrappers = wrappers % M;
                wrappers += newChocolate;
            }
            
            System.out.println("" + chocolates);
            }
        }
    }
